extends layout
block content
  .row.banner
    .col-12
      h1= pageHeader.title
        small &nbsp; #{pageHeader.strapline}
  .row
    .col-12.col-md-8
      each employee in employees
        .card
          .card-body
            h3 
              a(href="/profilePage")= employee.name
            span
              | <strong>Position:</strong> #{employee.position} <br>
              
              | <strong>Years Served:</strong> #{employee.years}
            .accomplishments
              each accomplishment in employee.accomplishments
                span.badge.badge-pill= accomplishment
                
