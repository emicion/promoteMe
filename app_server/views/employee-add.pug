extends layout
block content
  .row.banner
    .col-12
      h1= pageHeader.title
        small &nbsp; #{pageHeader.strapline}
  .row
    .col-12.col-md-8
      .card
        .card-body
          form.form-horizontal(action="/add" method="POST")
            .form-group
              label.control-label.col-sm-4(for="email") Email
              .col-sm-10
                input.form-control(type="email" name="email" required)
            .form-group
              label.control-label.col-sm-4(for="password") Password
              .col-sm-10
                input.form-control(type="password" name="password" required)
            .form-group
              label.control-label.col-sm-4(for="password-confirm") Confirm Password
              .col-sm-10
                input.form-control(type="password" name="password-confirm" required)    
            .form-group
              label.control-label.col-sm-4(for="firstName") First Name 
              .col-sm-10
                input.form-control(type="text" name="firstName" required)
            .form-group
              label.control-label.col-sm-4(for="lastName") Last Name
              .col-sm-10 
                input.form-control(type="text" name="lastName" required)
            .form-group
              label.control-label.col-sm-4(for="position") Position 
              .col-sm-10
                input.form-control(type="text" name="position" required)
            .form-group
              label.control-label.col-sm-4(for="storeNumber") Store Number 
              .col-sm-10
                input.form-control(type="text" name="storeNumber" required)
            .form-group
              label.control-label.col-sm-4(for="hireDate") Hire Date 
              .col-sm-10
                input.form-control(type="date" name="hireDate" required)
            .form-group
              label.control-label.col-sm-4(for="biography") Bio 
              .col-sm-10
                textarea.form-control(name="biography")
            - const choices = ['Food-Handler-Card', 'Meat-Cutter', 'Gourmet-Expert', 'Safetey-Expert']
            .form-check
              .col-11
                ul.accomplishments
                    each choice in choices
                      .accomplishment
                        label(for=choice) #{choice}
                        input(type="checkbox" id=choice value=choice name="accomplishments")
            .col-12
              button.btn.btn-primary.col-10(type='submit') Register
    .col-12.col-md-4
      p.lead &#129409 Your work is going to fill a large part of your life, and the only way to be truly satisfied is to do what you believe is great work. And the only way to do great work is to love what you do. If you haven't found it yet, keep looking. Don't settle. As with all matters of the heart, you'll know when you find it.
      span -Steve Jobs
