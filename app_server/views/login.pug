extends layoutLogin
block content
  .row
    .col-12.col-md-5
      .card
        .card-body
          h3 Sign In
          form.form-horizontal(action="/login" method="POST")
            .form-group
              label.control-label.col-sm-4(for="email") Email
              .col-12
                input.form-control(type="email" name="email")
            .form-group
              label.control-label.col-sm-4(for="password") Password 
              .col-12
                input.form-control(type="password" name="password")
            .col-12
              button.btn.btn-primary.col-12(type="submit") Sign In
              <br><br>
              p.text-center Don't have an account? 
                a(href ='/add') Sign Up.
                  
